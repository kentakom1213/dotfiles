{
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "terminal.integrated.tabs.enabled": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[haskell]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "haskell.haskell"
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.snippetSuggestions": "top"
  },
  "[cpp]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },
  "C_Cpp.clang_format_style": "{BasedOnStyle: Google, IndentWidth: 4}",
  "markdown-pdf.headerTemplate": "<div style=\"font-size: 9px; margin-left: 1cm;\"> </div> <div style=\"font-size: 9px; margin-left: auto; margin-right: 1cm; \"> <span class='date'></span></div>",
  "markdown-pdf.footerTemplate": "<div style=\"font-size: 12px; margin: 0 auto;\"> <span class='pageNumber'></span> / <span class='totalPages'></span></div>",
  "terminal.integrated.inheritEnv": false,
  "workbench.startupEditor": "none",
  "notebook.lineNumbers": "on",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "haskell.manageHLS": "GHCup",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "javascript.updateImportsOnFileMove.enabled": "never",
  "markdown.marp.themes": [
    "https://raw.githubusercontent.com/dracula/marp/master/dracula/dracula.css",
    "https://raw.githubusercontent.com/zero-one-seminar/zero-one-semi-Marp-theme/main/01semiTheme.css",
    "https://cunhapaulo.github.io/style/freud.css",
    "https://raw.githubusercontent.com/zero-one-seminar/zero-one-semi-Marp-theme/main/01dracula.css",
    "https://raw.githubusercontent.com/rnd195/my-marp-themes/main/beam.css"
  ],
  "markdown.marp.enableHtml": true,
  // "terminal.integrated.fontFamily": "'Hack Nerd Font Mono'",
  // font
  "editor.fontFamily": "'Ubuntu Mono', Cica",
  "editor.lineHeight": 17,
  "editor.letterSpacing": 0.4,
  "terminal.integrated.letterSpacing": 0.5,
  "hediet.vscode-drawio.resizeImages": null,
  "liveServer.settings.donotShowInfoMsg": true,
  "redhat.telemetry.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": false,
    "typescript": true,
    "typst": false
  },
  "hediet.vscode-drawio.theme": "atlas",
  "hediet.vscode-drawio.codeLinkActivated": false,
  // "latex-workshop.view.pdf.invert": 0.8,
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "editor.showFoldingControls": "always",
  "editor.minimap.autohide": true,
  "explorer.incrementalNaming": "smart",
  "code-eol.color": "#a39586",
  "editor.minimap.enabled": false,

  "window.zoomLevel": 1,
  // PythonのinlayHintsの設定
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.callArgumentNames": "all",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "comment-formula.enableLanguages": ["cpp", "python", "rust", "python"],
  "comment-formula.style": "none",
  "glassit.alpha": 220,
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "terminal.integrated.fontFamily": "'Ubuntu Mono', 'HackGen Console NF'",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "notebook.markup.fontSize": 14,
  "remote.autoForwardPortsSource": "hybrid",
  "terminal.integrated.fontSize": 15,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "typst-lsp.experimentalFormatterMode": "on",
  "tinymist.formatterMode": "typstfmt",
  "editor.fontSize": 15,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "markdown.marp.mathTypesetting": "katex",
  "workbench.activityBar.location": "hidden",
  "[typst]": {
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[typst-code]": {
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[latex]": {
    "editor.defaultFormatter": "iamhyc.overleaf-workshop"
  },
  "latex-workshop.synctex.afterBuild.enabled": true,
  "terminal.integrated.enableImages": true,
  "githubPullRequests.pullBranch": "never",
  "terminal.external.linuxExec": "wezterm"
}
